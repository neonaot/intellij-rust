<idea-plugin package="org.rust" xmlns:xi="http://www.w3.org/2001/XInclude" allow-bundled-update="true">
    <id>org.rust.lang</id>
    <name>Rust</name>

    <vendor>JetBrains</vendor>

    <change-notes><![CDATA[
        <a href="https://intellij-rust.github.io/2022/07/25/changelog-175.html">
                 https://intellij-rust.github.io/2022/07/25/changelog-175.html
    ]]>
    </change-notes>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->

    <xi:include href="/META-INF/rust-core.xml" xpointer="xpointer(/idea-plugin/*)"/>

    <dependencies>
        <plugin id="org.toml.lang"/>
    </dependencies>

    <content>
        <module name="org.rust.toml"/>
        <module name="org.rust.idea"/>
        <module name="org.rust.debugger"/>
        <module name="org.rust.profiler"/>
        <module name="org.rust.clion"/>
        <module name="org.rust.nativeDebug"/>
        <module name="org.rust.appcode"/>
        <module name="org.rust.rider"/>
        <module name="org.rust.copyright"/>
        <module name="org.rust.duplicates"/>
        <module name="org.rust.coverage"/>
        <module name="org.rust.grazie"/>
        <module name="org.rust.js"/>
        <module name="org.rust.mlCompletion"/>
    </content>
</idea-plugin>
